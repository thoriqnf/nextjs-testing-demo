<div class="py-4 flex justify-between items-center" id="user-<%= user.id %>">
    <div>
        <h3 class="text-lg font-medium text-white"><%= user.firstName %> <%= user.lastName %></h3>
        <p class="text-gray-400"><%= user.email %></p>
        <p class="text-sm text-gray-500">@<%= user.username %> â€¢ <%= user.role %></p>
    </div>
    <div class="space-x-3">
        <button 
            hx-get="/users/<%= user.id %>/edit" 
            hx-target="#user-<%= user.id %>"
            class="px-3 py-1.5 text-sm font-medium text-blue-400 hover:text-blue-300 transition-colors duration-200">
            Edit
        </button>
        <button 
            hx-delete="/users/<%= user.id %>" 
            hx-target="#user-<%= user.id %>"
            hx-confirm="Are you sure you want to delete this user?"
            class="px-3 py-1.5 text-sm font-medium text-red-400 hover:text-red-300 transition-colors duration-200">
            Delete
        </button>
    </div>
</div> 