<div class="py-4" id="user-<%= user.id %>">
    <form hx-patch="/users/<%= user.id %>" hx-target="#user-<%= user.id %>" class="space-y-6">
        <!-- Two Column Layout for Name Fields -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label for="firstName-<%= user.id %>" class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                <input type="text" id="firstName-<%= user.id %>" name="firstName" value="<%= user.firstName %>"
                    class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
            </div>
            
            <div>
                <label for="lastName-<%= user.id %>" class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                <input type="text" id="lastName-<%= user.id %>" name="lastName" value="<%= user.lastName %>"
                    class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
            </div>
        </div>

        <!-- Full Width Fields -->
        <div>
            <label for="email-<%= user.id %>" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
            <input type="email" id="email-<%= user.id %>" name="email" value="<%= user.email %>"
                class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
        </div>
        
        <div>
            <label for="username-<%= user.id %>" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
            <input type="text" id="username-<%= user.id %>" name="username" value="<%= user.username %>"
                class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
        </div>
        
        <!-- Role Dropdown -->
        <div class="max-w-[200px]">
            <label for="role-<%= user.id %>" class="block text-sm font-medium text-gray-300 mb-2">Role</label>
            <select id="role-<%= user.id %>" name="role"
                class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
                <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                <option value="guest" <%= user.role === 'guest' ? 'selected' : '' %>>Guest</option>
            </select>
        </div>
        
        <div class="flex space-x-3">
            <button type="submit"
                class="flex-1 h-12 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-gray-800 transition-colors duration-200 text-base font-medium">
                Save Changes
            </button>
            <button type="button"
                hx-get="/users/<%= user.id %>"
                hx-target="#user-<%= user.id %>"
                class="flex-1 h-12 bg-gray-700 text-gray-300 rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-gray-800 transition-colors duration-200 text-base font-medium">
                Cancel
            </button>
        </div>
    </form>
</div> 