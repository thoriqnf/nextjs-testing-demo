<!-- Create User Form -->
<div class="bg-gray-800 p-6 rounded-lg shadow-sm mb-8 transition-colors duration-200">
    <h2 class="text-2xl font-bold mb-8 text-white">Create New User</h2>
    <form hx-post="/users" hx-target="#users-list" hx-swap="afterbegin" class="space-y-6">
        <!-- Two Column Layout for Name Fields -->
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label for="firstName" class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                <input type="text" id="firstName" name="firstName" required
                    class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
            </div>
            
            <div>
                <label for="lastName" class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                <input type="text" id="lastName" name="lastName" required
                    class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
            </div>
        </div>

        <!-- Full Width Fields -->
        <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
            <input type="email" id="email" name="email" required
                class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
        </div>
        
        <div>
            <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
            <input type="text" id="username" name="username" required
                class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
        </div>
        
        <!-- Role Dropdown -->
        <div class="max-w-[200px]">
            <label for="role" class="block text-sm font-medium text-gray-300 mb-2">Role</label>
            <select id="role" name="role" 
                class="block w-full h-12 rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-400 focus:ring-blue-400 text-base">
                <option value="user">User</option>
                <option value="admin">Admin</option>
                <option value="guest">Guest</option>
            </select>
        </div>
        
        <button type="submit"
            class="w-full h-12 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-gray-800 transition-colors duration-200 text-base font-medium">
            Create User
        </button>
    </form>
</div>

<!-- Users List -->
<div class="bg-gray-800 p-6 rounded-lg shadow-sm transition-colors duration-200">
    <h2 class="text-2xl font-bold mb-6 text-white">Users</h2>
    <div id="users-list" class="divide-y divide-gray-700">
        <% users.forEach(function(user) { %>
            <%- include('user-item', { user: user }) %>
        <% }); %>
    </div>
</div> 